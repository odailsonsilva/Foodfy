{% extends "site/layout.njk" %}

{% block head %}
    <title>{{receita.title}} - Foodfy</title>
    <link rel="stylesheet" href="/style-receita.css">
{% endblock %}

{% block content %}
     <section>
        <div class="header-receita espacamento-divs">
            <img src="{{receita.imgRecipe2}}" alt="{{receita.title}}">
            <h1>{{receita.title}}</h1>
            <p>{{receita.author}}</p>
        </div>

        <div>
            <div class="title-btn">
                <h2>Ingredientes</h2>
                <p class="btn-esconder" id="btnME-ing" onClick="btnMostrar('ing', 'btnME-ing')">ESCONDER</p>
            </div>
            <ul class="ul-ingredientes alt" id="ing" >
                {% for ingrediente in receita.ingredientes %}
                <li>{{ingrediente}}</li>
                {% endfor %}
            </ul>
        </div>
            
       <div class="preparo-receita espacamento-divs">
            <div class="title-btn">
                <h2>Modo de preparo</h2>
                <p class="btn-esconder" id="btnME-pre" onClick="btnMostrar('prep', 'btnME-pre')">ESCONDER</p>
            </div>
            <div  id="prep" class="alt">
            {% for preparo in receita.modoPreparo %}
                <p class="paragrafo">{{preparo}}</p>        
            {% endfor %}
            </div>
        </div>

        <div class="informacoes-receita">
            <div class="title-btn">
                <h2>Informações adicionais</h2>
                <p class="btn-esconder" id="btnME-inf" onClick="btnMostrar('inf', 'btnME-inf')">ESCONDER</p>
            </div>
            <div class="alt" id="inf"> 
                <p class="paragrafo">{{receita.infAdd}}</p>
            </div>
        </div>  

    </section>
{% endblock %}


    

    


